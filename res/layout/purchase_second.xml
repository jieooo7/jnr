<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_style_bg"
    android:orientation="vertical" >
    <!-- title布局 -->
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/title" />
    <!-- title下方块布局 -->

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/title_below_back" />
    <!-- 线条 -->
   
    

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/all_menu_height"
		android:background="@drawable/back_select"
        android:orientation="horizontal" >
        <include
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        layout="@layout/line" />
        <TextView
            style="@style/sec"
            android:text="@string/had_purcharse"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:textColor="@color/main_out_down_text_color" />
		<include
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        layout="@layout/line" />	
        <TextView
            android:id="@+id/purchase_sec_tv1"
            style="@style/sec"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:text=""
            android:textColor="@color/main_out_down_text_color" />
    </RelativeLayout>
    
    <TextView
        style="@style/wrap"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:paddingBottom="30dp"
        android:textSize="13sp"
        android:textColor="@color/main_out_down_text_color"
        android:text="@string/had_purcharse_tips"/>
    
    
    
    
     <Button
        android:id="@+id/purchase_sec_bt1"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/btn_sure_height"
        android:layout_marginTop="25dp"
         android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_checkcode"
        android:text="@string/pay"
        android:textColor="@color/white"
        />
    
    
    
    

</LinearLayout>

