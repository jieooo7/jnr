<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_out_down_line_color"
    android:orientation="vertical" >
    <ImageView
        android:id="@+id/gift_not_iv" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/old_pic"
        />
    <TextView 
        android:id="@+id/gift_not_tv"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:textColor="@color/main_out_down_text_color"
        android:textSize="18sp"
        android:text="@string/invite_no_friends"
        />
    
    <Button
        android:id="@+id/gift_not_bt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_sure_height"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/button_checkcode"
        android:text="@string/invite_friends"
        android:textColor="@color/white"
        />
    

</LinearLayout>
