<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_out_back_color"
    android:orientation="vertical" >

    <!-- title布局 -->

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/title" />

    <!-- title下方块布局 -->

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/title_below_back" />

    <!-- 线条 -->

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/line" />
    
    
       <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:layout_marginBottom="5dp">
        
        <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
            >
    

  
        <!-- 绑定手机 -->

        <RelativeLayout
            android:id="@+id/secu_center_rl1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_menu_height"
            android:background="@drawable/back_select" >

            <TextView
                style="@style/sec"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/all_left_offset"
                android:text="@string/the_mobile"
                android:textColor="@color/main_out_down_text_color" />

            <ImageView
                android:id="@+id/sec_img1"
                style="@style/image_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/all_left_offset"
                android:src="@drawable/button_arrow" />

            <TextView
                android:id="@+id/secu_center_tv1"
                style="@style/sec"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/sec_img1"
                android:text=""
                android:textColor="@color/main_out_down_text_color" />
        </RelativeLayout>

        <!-- 分隔线 -->

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/line" />

        <!-- 实名认证 -->

        <RelativeLayout
            android:id="@+id/secu_center_rl2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_menu_height"
            android:background="@drawable/back_select" >

            <TextView
                style="@style/sec"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/all_left_offset"
                android:text="@string/real_name"
                android:textColor="@color/main_out_down_text_color" />
            <ImageView
                android:id="@+id/sec_img_add"
                style="@style/image_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/all_left_offset"
                android:src="@drawable/button_arrow" />

            <TextView
                android:id="@+id/secu_center_tv2"
                style="@style/sec"
                android:layout_toLeftOf="@id/sec_img_add"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="@color/main_out_down_text_color" />
        </RelativeLayout>

        <!-- 分隔线 -->

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/line" />

        <!-- 登陆密码 -->

        <RelativeLayout
            android:id="@+id/secu_center_rl3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_menu_height"
            android:background="@drawable/back_select" >

            <TextView
                style="@style/sec"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/all_left_offset"
                android:text="@string/login_passwd"
                android:textColor="@color/main_out_down_text_color" />

            <ImageView
                android:id="@+id/sec_img2"
                style="@style/image_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/all_left_offset"
                android:src="@drawable/button_arrow" />

            <TextView
                style="@style/sec"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/sec_img2"
                android:text="@string/change"
                android:textColor="@color/main_out_down_text_color" />
        </RelativeLayout>

        <!-- 分隔线 -->

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/line" />

        <!-- 交易密码 -->

        <RelativeLayout
            android:id="@+id/secu_center_rl4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_menu_height"
            android:background="@drawable/back_select" >

            <TextView
                style="@style/sec"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/all_left_offset"
                android:text="@string/deal_passwd"
                android:textColor="@color/main_out_down_text_color" />

            <ImageView
                android:id="@+id/sec_img3"
                style="@style/image_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/all_left_offset"
                android:src="@drawable/button_arrow" />

            <TextView
                android:id="@+id/secu_center_tv3"
                style="@style/sec"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/sec_img3"
                android:text="@string/un_set"
                android:textColor="@color/main_out_down_text_color" />
        </RelativeLayout>

        <!-- 分隔线 -->

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/line" />

        <!-- 图形解锁  打开手势密码 -->

        <RelativeLayout
            android:id="@+id/secu_center_rl5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_menu_height"
            android:background="@drawable/back_select" >

            <TextView
                android:id="@+id/textView1"
                style="@style/sec"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/all_left_offset"
                android:text="@string/lock_pattern"
                android:textColor="@color/main_out_down_text_color" />

            <ImageView
                android:id="@+id/an_off_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp" />
        </RelativeLayout>

        <!-- 线条 -->

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/line" />

        <!-- 修改手势密码 -->

        <RelativeLayout
            android:id="@+id/secu_center_rl6"
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_menu_height"
            android:background="@drawable/back_select" >

            <TextView
                style="@style/sec"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/all_left_offset"
                android:text="@string/modify_pattern"
                android:textColor="@color/main_out_down_text_color" />

            <ImageView
                android:id="@+id/sec_img21"
                style="@style/image_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/all_left_offset"
                android:src="@drawable/button_arrow" />

            <TextView
                style="@style/sec"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/sec_img21"
                android:text="@string/change"
                android:textColor="@color/main_out_down_text_color" />
            <!-- 线条 -->

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                layout="@layout/line" />
        </RelativeLayout>
        
        </LinearLayout>
    
    </ScrollView>
        

</LinearLayout>