<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_style_bg"
    android:orientation="vertical" >
    
    <!-- title布局 -->
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/title" />
    
    <!-- title下方块布局 -->
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/title_below_back" />
 
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/line" />
    
    <RelativeLayout
        android:id="@+id/manage_bank_rl1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/all_menu_height"
        android:background="@drawable/back_select" >

        <TextView
            style="@style/sec"
            android:id="@+id/manage_bank_tv1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/all_left_offset"
            android:text=""
            android:textColor="@color/main_out_down_text_color" />

        <TextView
            style="@style/sec"
            android:id="@+id/manage_bank_tv2"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/all_left_offset"
            android:text=""
            android:textColor="@color/main_out_down_text_color" />
    </RelativeLayout>
    
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/line" />
    
     <RelativeLayout
        android:id="@+id/manage_bank_rl2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/all_menu_height"
        android:orientation="horizontal"
        android:background="@color/base_menu_bg" >

        <TextView
            style="@style/sec"
			android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="@string/add_bank_card"
            android:textColor="@color/main_out_down_text_color" />

        <ImageView
            style="@style/wrap"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:src="@drawable/button_arrow" />

    </RelativeLayout>
    

</LinearLayout>
