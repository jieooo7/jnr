<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/base_style_bg"
    android:orientation="vertical"
    >
    
    <!-- title布局 -->
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/new_title" />
    
    
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        
        >
        
        
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        
        >
    <!-- title下方块布局 -->
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/title_below_back" />
    
	<!-- 线条 -->
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/line" />
    <com.jinr.pulltorefresh.PullToRefreshListView
        android:id="@+id/gift_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        
        />
        
        
    
    </LinearLayout>
    
    
    <include 
        android:id="@+id/not_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/gift_not" 
        android:visibility="gone"
        />
    </RelativeLayout>

</LinearLayout>
